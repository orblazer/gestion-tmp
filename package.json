{
  "name": "gestion-website",
  "version": "1.0.0",
  "description": "The panel for manage websites",
  "author": "RODRIGUEZ Dorian <rodriguez.dorian@pm.me>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "dev:serv": "cross-env NODE_ENV=development nodemon server/index.js --watch server --watch nuxt.config.js",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "gql": "apollo service:download src/graphql/schema.json",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@nuxtjs/apollo": "nuxt-community/apollo-module",
    "@nuxtjs/dotenv": "^1.3.0",
    "@nuxtjs/style-resources": "^0.1.2",
    "@nuxtjs/toast": "^3.0.2",
    "cookie": "^0.3.1",
    "cross-env": "^5.2.0",
    "fastify": "2.2.0",
    "graphql-tag": "^2.10.1",
    "nuxt": "2.6.1",
    "nuxt-i18n": "^5.8.5",
    "nuxt-property-decorator": "^2.1.3",
    "ts-node": "^8.0.3",
    "vee-validate": "2.2.2",
    "vuex-module-decorators": "^0.9.8",
    "vuex-persistedstate": "^2.5.4"
  },
  "devDependencies": {
    "@nuxt/typescript": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "1.6.0",
    "@typescript-eslint/parser": "1.6.0",
    "core-js": "2",
    "eslint": "5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-nuxt": "^0.4.3",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "node-sass": "^4.11.0",
    "nodemon": "1.18.11",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4",
    "stylelint-webpack-plugin": "^0.10.5"
  }
}
