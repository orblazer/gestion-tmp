{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "types": [
      "@types/node",
      "vue-apollo",
      "vue-toasted",
      "vue-i18n",
      "@nuxt/vue-app",
      "@nuxtjs/apollo",
      "@nuxtjs/toast",
      "nuxt-i18n",
      "vee-validate",
      "./@types"
    ]
  }
}
